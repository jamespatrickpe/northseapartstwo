<section class='small-10 columns'>
  <div class='mainheader'> Branches </div>
  <div class='subdescription'> List of all branches  </div>
  <hr>
  <% table_orientation = shift_table_orientation %>
  <% begin %>
      <table class='generic_table' id='branches_table'>
        <thead>
        <tr>
          <th>
            Branch ID
            <%= generic_table_theadlink('branches.id', table_orientation) %>
          </th>
          <th>
            Name
            <%= generic_table_theadlink('branches.name', table_orientation) %>
          </th>
          <th>
            Date Created
            <%= generic_table_theadlink('branches.created_at', table_orientation) %>
          </th>
          <th>
            Last Updated
            <%= generic_table_theadlink('branches.updated_at', table_orientation) %>
          </th>
          <th class="actions" align="center">&nbsp;</th>
        </tr>
        </thead>
        <% if @branches.empty? == true %>
            <% raise exception %>
        <% else %>
            <tbody>
            <% @branches.each do |branch| %>
                <tr>
                  <td><%= branch.id %></td>
                  <td><%= branch.name %></td>
                  <td><%= branch.created_at %> </td>
                  <td><%= branch.updated_at %> </td>
                  <td class="actions">
                  <%= link_to( "&#9998;".html_safe ,{:action => 'edit_branch', :branch_id => branch.id}, class: 'action_button', tooltip: 'Edit') %>
                    <%= link_to( "&#10006;".html_safe ,{:action => 'delete_branch', :branch_id => branch.id}, class: 'action_button delete_item', tooltip: 'Delete') %>
                  </td>
                </tr>
            <% end %>
            </tbody>
        <% end %>
      </table>
  <% rescue => ex %>
      <script>
          html = "<hr><p align='center'> No records found. Please try again.</p><hr>"
          $(".generic_table").replaceWith(html)
      </script>
  <% end %>
</section>