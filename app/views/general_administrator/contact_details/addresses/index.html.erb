<section class='small-10 columns'>
  <%= generic_title('Addresses','List of address entries within the system') %>
  <%= generic_table_search %>
  <% table_orientation = shift_table_orientation %>
  <% begin %>
      <table class='generic_table' id='address_table'>
        <thead>
        <tr>
          <%= generic_table_theadlink('Address ID',addresses.id, table_orientation) %>
          <th>Address Owners</th>
          <%= generic_table_theadlink('remark','addresses.remark', table_orientation) %>
          <%= generic_table_theadlink('Longitude','addresses.longitude', table_orientation) %>
          <%= generic_table_theadlink('Latitude','addresses.latitude', table_orientation) %>
          <th class="actions" align="center">&nbsp;</th>
        </tr>
        </thead>
        <% if @addresses.empty? == true %>
            <% raise exception %>
        <% else %>
            <tbody>
            <% @addresses.each do |address| %>
                <tr>
                  <td><%= address[:id].upcase %></td>
                  <td><%= get_all_entities_involved_with_a_model(AddressesActor, "addresses_actors.address_id = ?", address[:id]).collect { |i| i.name }.join(", ")%></td>
                  <td><%= address[:remark] %> </td>
                  <td><%= address[:longitude] %> </td>
                  <td><%= address[:latitude] %> </td>
                  <td class="actions">
                    <%= generic_table_actions(address[:id]) %>
                  </td>
                </tr>
            <% end %>
            </tbody>
        <% end %>
      </table>
  <% rescue => ex %>
      <%= generic_table_error(ex) %>
  <% end %>
  <%= generic_table_footer(@addresses) %>
</section>