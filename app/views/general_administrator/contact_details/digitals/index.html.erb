<section class='small-10 columns'>
  <div class='mainheader'> Digital Address information / URLs </div>
  <div class='subdescription'> List of URL address entries within the system </div>
  <hr>
  <%= generic_table_search %>
  <% table_orientation = shift_table_orientation %>
  <% begin %>
      <table class='generic_table' id='address_table'>
        <thead>
        <tr>
          <th>
            Digital Info ID
            <%= generic_table_theadlink('digitals.id', table_orientation) %>
          </th>
          <th>
            Actor ID
            <%= generic_table_theadlink('digitals.actor_id', table_orientation) %>
          </th>
          <th>
            URL
            <%= generic_table_theadlink('digitals.url', table_orientation) %>
          </th>
          <th>
            Description
            <%= generic_table_theadlink('digitals.description', table_orientation) %>
          </th>
          <th class="actions" align="center">&nbsp;</th>
        </tr>
        </thead>
        <% if @digitals.empty? == true %>
            <% raise exception %>
        <% else %>
            <tbody>
            <% @digitals.each do |digital| %>
                <tr>
                  <td><%= digital[:id] %></td>
                  <td><%= digital[:actor_id] %> </td>
                  <td><%= digital[:url] %> </td>
                  <td><%= digital[:description] %> </td>
                  <td class="actions">
                    <%= generic_table_actions(digital[:id]) %>
                  </td>
                </tr>
            <% end %>
            </tbody>
        <% end %>
      </table>
  <% rescue %>
      <script>
          html = "<hr><p align='center'> No records found. Please try again.</p><hr>"
          $(".generic_table").replaceWith(html)
      </script>
  <% end %>
  <%= generic_table_footer(@digitals) %>
</section>