<section class='small-10 columns'>
  <%= generic_title('Telephone information','List of Telephone data entries within the system') %>
  <%= generic_table_search %>
  <% table_orientation = shift_table_orientation %>
  <% begin %>
      <table class='generic_table' id='address_table'>
        <thead>
        <tr>
          <th>
            Telephone Info ID
            <%= generic_table_theadlink('telephones.id', table_orientation) %>
          </th>
          <th>
            Contact/s
          </th>
          <th>
            Digits
            <%= generic_table_theadlink('telephones.digits', table_orientation) %>
          </th>
          <th>
            remark
            <%= generic_table_theadlink('telephones.remark', table_orientation) %>
          </th>
          <th class="actions" align="center">&nbsp;</th>
        </tr>
        </thead>
        <% if @telephones.empty? == true %>
            <% raise exception %>
        <% else %>
            <tbody>
            <% @telephones.each do |telephone| %>
                <tr>
                  <td><%= telephone[:id].upcase %></td>
                  <td><%= get_all_entities_involved_with_a_model(TelephonesActor, "telephones_actors.telephone_id = ?", telephone[:id]).collect { |i| i.name }.join(", ")%></td>
                  <td><%= telephone[:digits] %> </td>
                  <td><%= telephone[:remark] %> </td>
                  <td class="actions">
                    <%= generic_table_actions(telephone[:id]) %>
                  </td>
                </tr>
            <% end %>
            </tbody>
        <% end %>
      </table>
  <% rescue => ex %>
      <%= generic_table_error(ex) %>
  <% end %>
  <%= generic_table_footer(@telephones) %>
</section>