<section class='small-10 columns'>
  <%= generic_title('Image Sets','Show all the images related with a given branch/actor') %>
  <% table_orientation = shift_table_orientation %>
  <% begin %>
      <table class="generic_table" id="image_sets_table">
        <thead>
        <tr>
          <th>
            Image Set ID
            <%= generic_table_theadlink('image_sets.id', table_orientation) %>
          </th>
          <th>
            Picture
            <%= generic_table_theadlink('image_sets.picture', table_orientation) %>
          </th>
          <th>
            Description
            <%= generic_table_theadlink('image_sets.description', table_orientation) %>
          </th>
          <th>
            Priority
            <%= generic_table_theadlink('image_sets.priority', table_orientation) %>
          </th>
          <th>
            Related Names
          </th>
          <th class="actions" align="center">&nbsp;</th>
        </tr>
        </thead>
        <% if @image_sets.empty? == true %>
            <% raise exception %>
        <% else %>
            <tbody>
            <% @image_sets.each do |image_set| %>
                <tr>
                  <td><%= image_set[:id] %></td>
                  <td><%= image_set[:picture] %></td>
                  <td><%= image_set[:description] %></td>
                  <td><%= image_set[:priority] %></td>
                  <td></td>
                  <td class="actions">
                    <%= generic_table_actions(image_set[:id]) %>
                  </td>
                </tr>
            <% end %>
            </tbody>
        <% end %>
      </table>
  <% rescue => ex %>
      <%= generic_table_error(ex) %>
  <% end %>
  <%= generic_table_footer(@image_sets) %>
</section>