<div style="position:relative; top:10%;">
    <div class="row">
      <div class="large-1 columns">&nbsp;</div>
      <div class="large-9 columns">
        <div style="padding:15px; color: white; background-color: gray;">
        <div class="mainheader"><%= headerMessage %></div>
        <p style="margin-left:25px;"><%= bodyMessage %></p>
        </div>

      </div>
      <div class="large-1 columns">&nbsp;</div>
    </div>

    <div class="row">
      <div class="large-1 columns">&nbsp;</div>
      <div class="large-9 columns" align="right">
        <div style="padding: 15px;">
        <% @nextLink.each do |key, value| %>
            <a href=" <%= value[:url] %> " class=" small button"><%= value[:label] %></a>
        <% end %>
        </div>
      </div>
      <div class="large-1 columns">&nbsp;</div>
    </div>
</div>