<section class='small-10 columns'>
  <%= generic_title('Constants','Shows all constant parameters within the system') %>
  <%= generic_index_search %>
  <% table_orientation = shift_table_orientation %>
  <% begin %>
      <table class='generic_index' id='constants_table'>
        <thead>
        <tr>
          <th>
            Constant ID
            <%= generic_index_theadlink('constants.id', table_orientation) %>
          </th>
          <th>
            Type
            <%= generic_index_theadlink('constants.constant_type', table_orientation) %>
          </th>
          <th>
            Name
            <%= generic_index_theadlink('constants.name', table_orientation) %>
          </th>
          <th>
            Value
            <%= generic_index_theadlink('constants.value', table_orientation) %>
          </th>
          <th>
            Date of Effectivity
            <%= generic_index_theadlink('constants.date_of_implementation', table_orientation) %>
          </th>
          <th>
            Remark
            <%= generic_index_theadlink('constants.remark', table_orientation) %>
          </th>
          <th>
            Date Created
            <%= generic_index_theadlink('constants.created_at', table_orientation) %>
          </th>
          <th>
            Last Updated
            <%= generic_index_theadlink('constants.updated_at', table_orientation) %>
          </th>
          <th class="actions" align="center">&nbsp;</th>
        </tr>
        </thead>
        <% if @constants.empty? == true %>
            <% raise exception %>
        <% else %>
            <tbody>
            <% @constants.each do |constant| %>
                <tr>
                  <td><%= constant[:id].upcase %></td>
                  <td><%= constant[:constant_type] %> </td>
                  <td><%= constant[:name] %> </td>
                  <td><%= constant[:value] %> </td>
                  <td><%= constant[:date_of_implementation].present? ? constant[:date_of_implementation].strftime('%m/%d/%Y') : "n/a" %> </td>
                  <td><%= constant[:remark] %> </td>
                  <td><%= constant[:created_at] %></td>
                  <td><%= constant[:updated_at] %></td>
                  <td class="actions">
                    <%= generic_index_actions(constant[:id]) %>
                  </td>
                </tr>
            <% end %>
            </tbody>
        <% end %>
      </table>
  <% rescue => ex %>
      <%= generic_index_error(ex) %>
  <% end %>
  <%= generic_index_footer(@constants) %>
</section>