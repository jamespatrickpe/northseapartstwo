<%= generic_employee_select_field('payroll_setting',@selected_payroll_setting[:employee_id]) %>
<div class="form-block">
  <div class="label">Article  : </div>
  <br />
  <select name='payroll_setting[article]'
          style="width: 50%"
          required="required" >
    <% if @selected_payroll_setting[:article] == "SSS" %>
        <option disabled>Select Article</option>
        <option value="SSS" selected>SSS</option>
        <option value="PHILHEALTH" >PHILHEALTH</option>
        <option value="PAGIBIG" >PAGIBIG</option>
    <% elsif @selected_payroll_setting[:article] == "PHILHEALTH" %>
        <option disabled>Select Article</option>
        <option value="SSS">SSS</option>
        <option value="PHILHEALTH" selected>PHILHEALTH</option>
        <option value="PAGIBIG">PAGIBIG</option>
    <% elsif @selected_payroll_setting[:article] == "PAGIBIG" %>
        <option disabled>Select Article</option>
        <option value="SSS">SSS</option>
        <option value="PHILHEALTH">PHILHEALTH</option>
        <option value="PAGIBIG" selected>PAGIBIG</option>
    <% else %>
        <option disabled selected>Select Article</option>
        <option value="SSS">SSS</option>
        <option value="PHILHEALTH" >PHILHEALTH</option>
        <option value="PAGIBIG">PAGIBIG</option>
    <% end %>
  </select>
</div>

<div class="form-block">
  <div class="label">Applicability  : </div>
  <br />
  <select name='payroll_setting[applicability]'
          style="width: 50%"
          required="required" >
    <% if @selected_payroll_setting[:applicability] == true %>
        <option disabled>Select Applicability</option>
        <option value=1 selected>ACTIVE</option>
        <option value=0>INACTIVE</option>
    <% elsif @selected_payroll_setting[:applicability] == false %>
        <option disabled>Select Applicability</option>
        <option value=1>ACTIVE</option>
        <option value=0 selected>INACTIVE</option>
    <% else %>
        <option disabled selected>Select Applicability</option>
        <option value=1>ACTIVE</option>
        <option value=0>INACTIVE</option>
    <% end %>
  </select>
</div>

<div class="form-block">
  <div class="label">Date of Effectivity  : </div>
  <input type="datetime-local"
         required="required"
         name="payroll_setting[date_of_effectivity]"
         step="1"
         value= <%= @selected_payroll_setting[:date_of_effectivity].present? ?
                            @selected_payroll_setting[:date_of_effectivity].strftime('%FT%T') :
                            Time.now.strftime('%FT%T')  %>>
</div>

<%= generic_remarks_description_field('payroll_setting',@selected_payroll_setting[:remark]) %>