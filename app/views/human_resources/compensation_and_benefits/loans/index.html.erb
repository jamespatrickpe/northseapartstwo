<section class='small-10 columns'>
  <%= generic_title('Loans','Displays all loans of employees') %>
  <%= generic_table_search %>
  <% table_orientation = shift_table_orientation %>
  <% begin %>
      <table class='generic_table' id='loans_table'>
        <thead>
        <tr>
          <th>
            Loan ID
            <%= generic_table_theadlink('loans.id', table_orientation) %>
          </th>
          <th>
            Loan Type
            <%= generic_table_theadlink('loans.loan_type', table_orientation) %>
          </th>
          <th>
            Employee ID
            <%= generic_table_theadlink('loans.employee_id', table_orientation) %>
          </th>
          <th>
            Borrower / Employee Name
            <%= generic_table_theadlink('loans.borrower_name', table_orientation) %>
          </th>
          <th>
            Loan Value
            <%= generic_table_theadlink('loans.loan_value', table_orientation) %>
          </th>
          <th>
            Collection Period (From)
            <%= generic_table_theadlink('loans.collection_period_from', table_orientation) %>
          </th>
          <th>
            Collection Period (To)
            <%= generic_table_theadlink('loans.collection_period_to', table_orientation) %>
          </th>
          <th>
            Monthly Installment
            <%= generic_table_theadlink('loans.monthly_installment', table_orientation) %>
          </th>
          <th class="actions" align="center">&nbsp;</th>
        </tr>
        </thead>
        <% if @loans.empty? == true %>
            <% raise exception %>
        <% else %>
            <tbody>
            <% @loans.each do |loan| %>
                <tr>
                  <td><%= loan[:id].upcase %> </td>
                  <td><%= loan[:loan_type] %> </td>
                  <td><%= loan[:employee_id] %> </td>
                  <td><%= loan[:borrower_name] %> </td>
                  <td><%= loan[:loan_value] %> </td>
                  <td><%= loan[:collection_period_from].strftime('%m/%d/%Y') %> </td>
                  <td><%= loan[:collection_period_to].strftime('%m/%d/%Y') %> </td>
                  <td><%= loan[:monthly_installment] %> </td>
                  <td class="actions">
                    <%= generic_table_actions(loan[:id]) %>
                    <%= link_to( "&#128083;".html_safe,
                                 '/human_resources/compensation_and_benefits/loans/' + loan[:id],
                                 class: 'action_button',
                                 tooltip: 'Examine') %>
                  </td>
                </tr>
            <% end %>
            </tbody>
        <% end %>
      </table>
  <% rescue => ex %>
      <% puts ex %>
      <%= generic_table_error(ex) %>
  <% end %>
  <%= generic_table_footer(@loans) %>
</section>