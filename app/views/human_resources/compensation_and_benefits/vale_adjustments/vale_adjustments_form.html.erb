<section class='small-10 columns'>
  <div class='mainheader'> Vale Adjustment Form </div>
  <div class='subdescription'> Set the Status of an Advanced Payment </div>
  <hr>
  <div class='small-6 columns generic_form'>

    <%= generic_form_edit_id_indicator(@selected_vale_adjustment[:id]) %>

    <%
       @selected_vale_adjustment[:id].present? ?
               (current_method = :patch; current_action = @selected_vale_adjustment[:id] ) :
               (current_method = :post; current_action = 'create')
    %>

    <%=
        form_tag( {:action => current_action},
                  {:method => current_method,
                   :class => 'create_form',
                   :id => "new_vale_adjustment_form",
                   :"data-parsley-validate" => ""
                  },
        ) do
    %>
        <%= hidden_field_tag('vale_adjustment[id]', @selected_vale_adjustment[:id] ) %>

        Parent Vale ID: <br>
        <select name='vale_adjustment[vale_id]'
                id='new_vale_adjustment_employee'
                class='employee_select_field'
                required="required" >
          <option value='' <%= @parent_vale_id.present? ? '':'selected' %> >Select Parent Vale ID</option>
          <% @vales.each do |vale| %>
              <% if vale.id == (@parent_vale_id ||= @selected_vale_adjustment.vale_id)  %>
                  <option value=<%= vale[:id] %> selected><%= vale[:id] %></option>
              <% else %>
                  <option value=<%= vale[:id] %>><%= vale[:id] %></option>
              <% end %>
          <% end %>
        </select>

        <br> Signed Type: <br>
        <select name='vale_adjustment[signed_type]'
                style="width: 50%"
                required="required" >
          <% if @selected_vale_adjustment[:signed_type] == true %>
              <option disabled >Select Signed Type</option>
              <option value=1 selected>Addition</option>
              <option value=0>Deduction</option>
          <% elsif @selected_vale_adjustment[:signed_type] == false%>
              <option disabled>Select Signed Type</option>
              <option value=1>Addition</option>
              <option value=0 selected>Deduction</option>
          <% else %>
              <option disabled selected>Select Signed Type</option>
              <option value=1>Addition</option>
              <option value=0 >Deduction</option>
          <% end %>
        </select>

        <br> Amount: <br>
        <%= text_field_tag("vale_adjustment[amount]",
                           content = @selected_vale_adjustment[:amount],
                           options = {placeholder: "Enter amount",
                                      required: "required",
                                      id: "vale_amount_of_deduction",
                                      :"data-parsley-trigger" => "keyup",
                                      :"data-parsley-step" => "0.01",
                                      :"data-parsley-type" => "number"}) %>


        <br> Date of Effectivity: <br>
        <input type="datetime-local"
               required="required"
               name="vale_adjustment[date_of_effectivity]"
               style="width: 50%"
               step="1"
               value= <%= @selected_vale_adjustment[:date_of_effectivity].present? ? @selected_vale_adjustment[:date_of_effectivity].strftime('%FT%T') : Time.now.strftime('%FT%T')  %>>

        <br> Remarks: <br>
        <%= text_area_tag("vale_adjustment[remark]",
                          content = @selected_vale_adjustment[:remark],
                          options = {class: "remark_description",
                                     :"data-parsley-trigger" => "keyup",
                                     :"data-parsley-maxlength"=>"128",
                                     :placeholder => 'Remarks' }) %>

        <%=
            if @parent_vale_id.present?
              link_to( 'Parent Vale'.html_safe,
                       '/human_resources/compensation_and_benefits/vales/' + @parent_vale_id + '/edit',
                       class: 'tiny button')
            end
        %>

        <%=
            if @parent_vale_id.present?
              link_to( 'Vale Summary'.html_safe,
                       '/human_resources/compensation_and_benefits/vales/' + @parent_vale_id,
                       class: 'tiny button')
            end
        %>

        <hr>

        <%= generic_form_footer(@selected_vale_adjustment[:id]) %>

        <hr />
    <% end %>
  </div>
  <%= renderCorePartial('employee_quick_profile') %>
</section>