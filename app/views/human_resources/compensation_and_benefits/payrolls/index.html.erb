<section class='small-10 columns'>
  <div class='mainheader'>  Payrolls </div>
  <div class='subdescription'> Payroll Settings for a specific point in time  </div>
  <hr>
  <%= generic_table_search %>
  <% table_orientation = shift_table_orientation %>
  <% begin %>
      <table class="generic_table" id="payrolls_table">
        <thead>
        <tr>
          <th>
            Payroll Settings ID
            <%= generic_table_theadlink('payrolls.id', table_orientation) %>
          </th>
          <th>
            Employee
            <%= generic_table_theadlink('actors.name', table_orientation) %>
          </th>
          <th>
            Article
            <%= generic_table_theadlink('payrolls.article', table_orientation) %>
          </th>
          <th>
            Applicability
            <%= generic_table_theadlink('payrolls.applicability', table_orientation) %>
          </th>
          <th>
            Remark
            <%= generic_table_theadlink('payrolls.remark', table_orientation) %>
          </th>
          <th>
            Date of Effectivity
            <%= generic_table_theadlink('payrolls.date_of_effectivity', table_orientation) %>
          </th>
          <th>
            Date Created
            <%= generic_table_theadlink('payrolls.created_at', table_orientation) %>
          </th>
          <th>
            Last Updated
            <%= generic_table_theadlink('payrolls.updated_at', table_orientation) %>
          </th>
          <th class="actions" align="center">&nbsp;</th>
        </tr>
        </thead>
        <% if @payrolls.empty? == true %>
            <% raise exception %>
        <% else %>
            <tbody>
            <% @payrolls.each do |payroll| %>
                <tr>
                  <td><%= payroll[:id] %></td>
                  <td><%= generic_actor_profile_link(payroll.employee.actor.id, payroll.employee.actor.name) %></td>
                  <td><%= payroll[:article] %> </td>
                  <td>
                    <%=
                        if(payroll[:applicability])
                          "ACTIVE"
                        else
                          "INACTIVE"
                        end
                    %>
                  </td>
                  <td><%= payroll[:remark] %> </td>
                  <td><%= payroll[:date_of_effectivity] %> </td>
                  <td><%= payroll[:created_at] %></td>
                  <td><%= payroll[:updated_at] %></td>
                  <td class="actions">
                    <%= generic_table_actions(payroll[:id]) %>
                    <%= link_to( "&#128083;".html_safe,
                                 '/human_resources/compensation_and_benefits/payrolls/employee?id=' + payroll.employee.id,
                                 class: 'action_button',
                                 tooltip: 'Examine') %>
                  </td>
                </tr>
            <% end %>
            </tbody>
        <% end %>
      </table>
  <% rescue %>
      <script>
          html = "<hr><p align='center'> No records found. Please try again.</p><hr>"
          $(".generic_table").replaceWith(html)
      </script>
  <% end %>
  <%= generic_table_footer(@payrolls) %>
</section>