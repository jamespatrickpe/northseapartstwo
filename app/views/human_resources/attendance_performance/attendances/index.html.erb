<section class='small-10 columns'>
  <div class='mainheader'> Attendances </div>
  <div class='subdescription'> Period of Presence of an Employee  </div>
  <hr>
  <%= generic_table_search %>
  <% table_orientation = shift_table_orientation %>
  <% begin %>
      <table class='generic_table' id='attendances_table'>
        <thead>
        <tr>
          <th>
            Attendance ID
            <%= generic_table_theadlink('attendances.id', table_orientation) %>
          </th>
          <th>
            Employee
            <%= generic_table_theadlink('actors.name', table_orientation) %>
          </th>
          <th>
            Date of Attendance
            <%= generic_table_theadlink('attendances.date_of_attendance', table_orientation) %>
          </th>
          <th>
            Time In
            <%= generic_table_theadlink('attendances.timein', table_orientation) %>
          </th>
          <th>
            Time Out
            <%= generic_table_theadlink('attendances.timeout', table_orientation) %>
          </th>
          <th>
            Remark
            <%= generic_table_theadlink('attendances.remark', table_orientation) %>
          </th>
          <th>
            Date Created
            <%= generic_table_theadlink('attendances.created_at', table_orientation) %>
          </th>
          <th>
            Last Updated
            <%= generic_table_theadlink('attendances.updated_at', table_orientation) %>
          </th>
          <th class="actions" align="center">&nbsp;</th>
        </tr>
        </thead>
        <% if @attendances.empty? == true %>
            <% raise exception %>
        <% else %>
            <tbody>
            <% @attendances.each do |attendance| %>
                <tr>
                  <td><%= attendance[:id] %></td>
                  <td><%= link_to( attendance.employee.actor.name ,{:action => 'employee_profile', :employee_id => attendance.employee.id} ) %></td>
                  <td><%= attendance[:date_of_attendance] %> </td>
                  <td><%= attendance[:timein].present? ? attendance[:timein].strftime("%H:%M:%S") : "n/a" %> </td>
                  <td><%= attendance[:timeout].present? ? attendance[:timeout].strftime("%H:%M:%S") : "n/a" %> </td>
                  <td><%= attendance[:remark] %> </td>
                  <td><%= attendance[:created_at] %></td>
                  <td><%= attendance[:updated_at] %></td>
                  <td class="actions">
                    <%= generic_table_actions(attendance[:id]) %>
                  </td>
                </tr>
            <% end %>
            </tbody>
        <% end %>
      </table>
  <% rescue => ex %>
      <script>
          html = "<hr><p align='center'> No records found. Please try again.</p><hr>"
          $(".generic_table").replaceWith(html)
      </script>
  <% end %>
  <%= generic_table_footer(@attendances) %>
</section>