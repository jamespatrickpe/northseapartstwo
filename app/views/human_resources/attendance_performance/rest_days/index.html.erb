<section class='small-10 columns'>
  <%= generic_title('Rest Days Management','Manage Rest Days for each Employee') %>
  <%= generic_index_search %>
  <% table_orientation = shift_table_orientation %>
  <% begin %>
      <table class="generic_index" id="rest_days_table">
        <thead>
        <tr>
          <th>
            Rest Days ID
            <%= generic_index_theadlink('rest_days.id', table_orientation) %>
          </th>
          <th>
            Employee
            <%= generic_index_theadlink('actors.name', table_orientation) %>
          </th>
          <th>
            Day
            <%= generic_index_theadlink('rest_days.day', table_orientation) %>
          </th>
          <th>
            Date of Effectivity
            <%= generic_index_theadlink('rest_days.date_of_implementation', table_orientation) %>
          </th>
          <th>
            Date Registered
            <%= generic_index_theadlink('rest_days.created_at', table_orientation) %>
          </th>
          <th>
            Last Updated
            <%= generic_index_theadlink('rest_days.updated_at', table_orientation) %>
          </th>
          <th class="actions">&nbsp;</th>
        </tr>
        </thead>
        <% if @rest_days.empty? == true %>
            <% raise exception %>
        <% else %>
            <tbody>
            <% @rest_days.each do |rest_day| %>
                <tr>
                  <td><%= rest_day[:id].upcase %></td>
                  <td><%= generic_actor_profile_link(rest_day.employee.actor.id, rest_day.employee.actor.name) %></td>
                  <td><%= rest_day[:day] %> </td>
                  <td><%= rest_day[:date_of_implementation] %> </td>
                  <td><%= rest_day[:created_at] %></td>
                  <td><%= rest_day[:updated_at] %></td>
                  <td class="actions">
                    <%= generic_index_actions(rest_day[:id]) %>
                  </td>
                </tr>
            <% end %>
            </tbody>
        <% end %>
      </table>
  <% rescue => ex %>
      <%= generic_index_error(ex) %>
  <% end %>
  <%= generic_index_footer(@rest_days) %>
</section>