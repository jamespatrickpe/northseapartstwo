<div class="large-6 columns">
  <%=
      if wizard_activated?
        f.input :system_account_id,
                as: :hidden,
                :input_html => { :value => params[:wizard_primary_model_id] }
      else
        render_collection_selector(f, selected_model_instance, 'system_account_id', 'Associated System Account', SystemAccount.all)
      end
  %>

  <%= f.input :education,
              :required => false,
              :as => :text,
              :label => "Education",
              label_html: { class: 'form_label' },
              :input_html =>
                      {
                              :value => selected_model_instance[:education],
                              :'data-parsley-trigger' => 'keyup',
                              :'data-parsley-maxlength' => 256
                      }
  %>

  <%= f.input :notable_accomplishments,
              :required => false,
              :as => :text,
              :label => "Notable Accomplishments",
