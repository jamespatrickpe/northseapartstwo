                      {
                              :value => selected_model_instance[:gender],
                              :'data-parsley-trigger' => 'keyup',
                              :'data-parsley-maxlength' => 32
                      }
  %>

  <div class="form-block" style="float: left; width: 50%;">
    <div class="form_label"> Date of Birth </div>
    <input type="date" name="<%= controller_path %>[date_of_birth]" value=<%= selected_model_instance[:date_of_birth] %>>
  </div>
  <hr style="visibility: hidden">

  <%= f.input :place_of_birth,
