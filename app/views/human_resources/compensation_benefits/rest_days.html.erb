<section class='small-10 columns'>
  <div class='mainheader'> Rest Days Management </div>
  <div class='subdescription'> Manage Rest Days</div>
  <hr>
  <%= generic_table_search( 'rest_days_search_input', 'rest_days',' Search Rest Days' , '/human_resources/search_suggestions_rest_days') %>
  <% table_orientation = shift_table_orientation %>
  <% begin %>
      <table class="generic_table" id="rest_days_table">
        <thead>
        <tr>
          <th>
            Rest Days ID<%= generic_table_theadlink('rest_days','rest_days.id', table_orientation) %>
          </th>
          <th>
            Employee <%= generic_table_theadlink('rest_days','actors.name', table_orientation) %>
          </th>
          <th>
            Day <%= generic_table_theadlink('rest_days','rest_days.day', table_orientation) %>
          </th>
          <th>
            Date Registered <%= generic_table_theadlink('rest_days','rest_days.created_at', table_orientation) %>
          </th>
          <th>
            Last Updated <%= generic_table_theadlink('rest_days','rest_days.updated_at', table_orientation) %>
          </th>
          <th class="actions">&nbsp;</th>
        </tr>
        </thead>
        <% if @rest_days.empty? == true %>
            <% raise exception %>
        <% else %>
            <tbody>
            <% @rest_days.each do |rest_day| %>
                <tr>
                  <td><%= rest_day.id %></td>
                  <td><%= rest_day.employee.actor.name %> </td>
                  <td><%= rest_day.day %> </td>
                  <td><%= rest_day.created_at %></td>
                  <td><%= rest_day.updated_at %></td>
                  <td class="actions">
                    <%= link_to( "[ EDIT &#9998; ]".html_safe ,{:action => 'edit_rest_day', :rest_day_id => rest_day.id}, class: 'action_button' ) %>
                    <%= link_to( "[ DELETE &#10006; ]".html_safe ,{:action => 'delete_rest_day', :rest_day_id => rest_day.id}, class: 'action_button' ) %>
                  </td>
                </tr>
            <% end %>
            </tbody>
        <% end %>
      </table>
      <%= generic_table_footer('new_rest_day','/human_resources/rest_days',@rest_days) %>
      <% rescue %>
      <script>
          html = "<hr><p align='center'> No records found. Please try again. </p><hr>"
          $(".generic_table").replaceWith(html)
      </script>
      <% end %>
</section>