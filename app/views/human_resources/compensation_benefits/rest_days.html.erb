<section class='small-10 columns'>
  <div class='mainheader'> Rest Days </div>
  <div class='subdescription'> Set Rest Days for Employees aside from the given Default </div>
  <hr>

  <%= generic_table_search('rest_days', 'search_rest_days', 'Search Rest Day') %>

  <% begin %>
      <% table_orientation = shift_table_orientation %>
      <table class="generic_table" id="rest_days_table">
        <thead>
        <tr>
          <th>
            Employee ID
            <%= link_to( table_orientation["orientation_symbol"].html_safe  ,{:action => 'rest_days', :order_parameter => "rest_days.id", :order_orientation => table_orientation["order_orientation"] } ,class: "table_orientation_indicator" ) %>
          </th>
          <th>
            Name
            <%= link_to( table_orientation["orientation_symbol"].html_safe ,{:action => 'rest_days', :order_parameter => "actors.name", :order_orientation => table_orientation["order_orientation"] } ,class: "table_orientation_indicator")%>
          </th>
          <th>
            Status
            <%= link_to( table_orientation["orientation_symbol"].html_safe ,{:action => 'rest_days', :order_parameter => "dutystatus.label", :order_orientation => table_orientation["order_orientation"] } ,class: "table_orientation_indicator")%>
          </th>
          <th>
            Branch
            <%= link_to( table_orientation["orientation_symbol"].html_safe ,{:action => 'rest_days', :order_parameter => "branches.name", :order_orientation => table_orientation["order_orientation"] } ,class: "table_orientation_indicator")%>
          </th>
          <th>
            Date Registered
            <%= link_to( table_orientation["orientation_symbol"].html_safe ,{:action => 'rest_days', :order_parameter => "employees.created_at", :order_orientation => table_orientation["order_orientation"] } ,class: "table_orientation_indicator")%>
          </th>
          <th>
            Last Updated
            <%= link_to( table_orientation["orientation_symbol"].html_safe ,{:action => 'employee_accounts_management', :order_parameter => "employees.updated_at", :order_orientation => table_orientation["order_orientation"] } ,class: "table_orientation_indicator")%>
          </th>
          <th class="actions">&nbsp;</th>
        </tr>
        </thead>
        <% if @employee_accounts.empty? == true %>
            <% raise exception %>
        <% else %>
            <tbody>
            <% @employee_accounts.each do |employee_accounts| %>
                <tr>
                  <td><%= employee_accounts[0] %></td>
                  <td><%= link_to( employee_accounts[1] ,{:action => 'employee_profile', :employee_id => employee_accounts[0], :actor_id => employee_accounts[6]} ) %>
                  </td>
                  <td><%= employee_accounts[2] %></td>
                  <td><%= employee_accounts[3] %></td>
                  <td><%= employee_accounts[4] %></td>
                  <td><%= employee_accounts[5] %></td>
                  <td class="actions">
                    <%= link_to( "[ EDIT &#9998; ]".html_safe ,{:action => 'edit_employee', :employee_id => employee_accounts[0]}, class: "action_button" ) %>
                    <%= link_to( "[ DELETE &#10006; ]".html_safe ,{:action => 'delete_employee', :employee_id => employee_accounts[0]} , class: "action_button" ) %>
                  </td>
                </tr>
            <% end %>
            </tbody>
        <% end %>
      </table>
  <% rescue %>
      <script>
          html = "<hr><p align='center'> No records found. Please try again. </p><hr>"
          $(".generic_table").replaceWith(html)
      </script>
  <% end %>

  <%= generic_table_footer('/human_resources/employee_registration', '/human_resources/reset_search_employees', @employee_accounts, 'employee_accounts_table') %>

</section>