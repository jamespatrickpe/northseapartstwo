<section class='small-10 columns'>
  <div class='mainheader'> Permissions </div>
  <div class='subremark'> List of permissions used within the system. </div>
  <hr>
  <%= generic_table_search %>
  <% table_orientation = shift_table_orientation %>
  <% begin %>
      <table class='generic_table' id='permission_table'>
        <thead>
        <tr>
          <%= generic_table_theadlink('ID','permissions.id', table_orientation) %>
          <%= generic_table_theadlink('Access ID','permissions.access_id', table_orientation) %>
          <%= generic_table_theadlink('Permission','permissions.can', table_orientation) %>
          <%= generic_table_theadlink('Remark','permissions.remark', table_orientation) %>
          <th class="actions" align="center">&nbsp;</th>
        </tr>
        </thead>
        <% if @permissions.empty? == true %>
            <% raise exception %>
        <% else %>
            <tbody>
            <% @permissions.each do |permission| %>
                <tr>
                  <td><%= permission[:id].upcase %></td>
                  <td><%= permission[:access_id] %> </td>
                  <td><%= permission[:can] %> </td>
                  <td><%= permission[:remark] %> </td>
                  <td class="actions">
                    <%= generic_table_actions(permission[:id]) %>
                  </td>
                </tr>
            <% end %>
            </tbody>
        <% end %>
      </table>
  <% rescue => ex %>
      <%= generic_table_error(ex) %>
  <% end %>
  <%= generic_table_footer(@permissions) %>
</section>