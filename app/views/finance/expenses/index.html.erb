<section class='small-10 columns'>
  <%= generic_title('Expenses','Displays all the expenses and their details by all persons within the enterprise') %>
  <%= generic_table_search %>
  <% table_orientation = shift_table_orientation %>
  <% begin %>
      <table class='generic_table' id='expense_table'>
        <thead>
        <tr>
          <th>
            ID
            <%= generic_table_theadlink('expenses.id', table_orientation) %>
          </th>
          <th>
            Amount
            <%= generic_table_theadlink('expenses.amount', table_orientation) %>
          </th>
          <th>
            Category
            <%= generic_table_theadlink('expenses.category', table_orientation) %>
          </th>
          <th>
            Physical ID
            <%= generic_table_theadlink('expenses.physical_id', table_orientation) %>
          </th>
          <th>
            Involved Entities
          </th>
          <th>
            Remark
            <%= generic_table_theadlink('expenses.remark', table_orientation) %>
          </th>
          <th>
            Date of Effectivity
            <%= generic_table_theadlink('expenses.date_of_effectivity', table_orientation) %>
          </th>
          <th class="actions" align="center">&nbsp;</th>
        </tr>
        </thead>
        <% if @expenses.empty? == true %>
            <% raise exception %>
        <% else %>
            <tbody>
            <% @expenses.each do |e| %>
                <tr>
                  <td><%= e[:id] %></td>
                  <td><%= e[:amount] %> </td>
                  <td><%= e[:category] %> </td>
                  <td><%= e[:physical_id] %> </td>
                  <td><%= get_all_entities_involved_with_a_model(ExpensesActor, "expenses_actors.expense_id = ?", e[:id]).collect { |i| i.name }.join(", ")%></td>
                  <td><%= e[:remark] %> </td>
                  <td><%= e[:date_of_effectivity] %> </td>
                  <td class="actions">
                    <%= generic_table_actions(e[:id]) %>
                  </td>
                </tr>
            <% end %>
            </tbody>
        <% end %>
      </table>
  <% rescue => ex %>
      <%= generic_table_error(ex) %>
  <% end %>
  <%= generic_table_footer(@expenses) %>
</section>