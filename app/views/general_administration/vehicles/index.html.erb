<section class='small-10 columns'>
  <%= generic_title('Vehicles','Show all the vehicles registered within the system') %>
  <% table_orientation = shift_table_orientation %>
  <% begin %>
      <table class="generic_table" id="vehicles_table">
        <thead>
        <tr>
          <th>
            Vehicle ID
            <%= generic_table_theadlink('vehicles.id', table_orientation) %>
          </th>
          <th>
            Vehicle Type
            <%= generic_table_theadlink('vehicles.type_of_vehicle', table_orientation) %>
          </th>
          <th>
            Plate Number
            <%= generic_table_theadlink('vehicles.plate_number', table_orientation) %>
          </th>
          <th>
            ORCR
            <%= generic_table_theadlink('vehicles.orcr', table_orientation) %>
          </th>
          <th>
            Date Registered
            <%= generic_table_theadlink('vehicles.date_of_registration', table_orientation) %>
          </th>
          <th>
            Remark
            <%= generic_table_theadlink('vehicles.remark', table_orientation) %>
          </th>
          <th class="actions" align="center">&nbsp;</th>
        </tr>
        </thead>
        <% if @vehicles.empty? == true %>
            <% raise exception %>
        <% else %>
            <tbody>
            <% @vehicles.each do |vehicle| %>
                <tr>
                  <td><%= vehicle[:id].upcase %></td>
                  <td><%= vehicle[:type_of_vehicle] %></td>
                  <td><%= vehicle[:plate_number] %></td>
                  <td><%= vehicle[:orcr] %></td>
                  <td><%= vehicle[:date_of_registration].strftime('%m/%d/%Y') %></td>
                  <td><%= vehicle[:remark] %></td>
                  <td class="actions">
                    <%= generic_table_actions(vehicle[:id]) %>
                  </td>
                </tr>
            <% end %>
            </tbody>
        <% end %>
      </table>
  <% rescue => ex %>
      <%= generic_table_error(ex) %>
  <% end %>
  <%= generic_table_footer(@vehicles) %>
</section>