<% if (force_show == true || action_name == 'index') %>
    <%
       begin
         main_model = current_instance_type.constantize.find(current_instance_id)
         base = (main_model.main_representation)
    %>
        <%= link_to base[:attribute], base[:controller_path] + '/'+ current_instance_id %>
    <% rescue => ex %>
        <%= " N/A " + ex.to_s %>
    <% end %>

<% end %>